<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dangvanduc90.photoeditorsticker.activity.MainActivity">

    <ImageView
        android:id="@+id/ivApp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/ibtnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivApp"
        android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/ibtnGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibtnCamera"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtnRate"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/dbzrateicon" />

        <ImageButton
            android:id="@+id/ibtnShare"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/dbzrateicon" />

        <ImageButton
            android:id="@+id/ibtnInfo"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/dbzrateicon" />

        <ImageButton
            android:id="@+id/ibtnMore"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/dbzrateicon" />
    </LinearLayout>
</RelativeLayout>
